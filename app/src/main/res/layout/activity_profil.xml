                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/ic_tujuan5"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="52dp"
                        android:src="@drawable/ic_00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/ic_tujuan5"
                        android:layout_marginLeft="5dp"
                        android:text="@string/tujuan5"
                        android:textSize="11sp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/ic_tujuan6"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="52dp"
                        android:src="@drawable/ic_00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/ic_tujuan6"
                        android:layout_marginLeft="5dp"
                        android:text="@string/tujuan6"
                        android:textSize="11sp"
                        android:layout_marginBottom="4dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
